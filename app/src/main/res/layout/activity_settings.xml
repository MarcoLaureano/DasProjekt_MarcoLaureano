<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <!-- Switch para activar/desactivar notificaciones -->

    <TextView
        android:background="@drawable/text_bg"
        android:text="Configuraciones: "
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

   <LinearLayout
       android:layout_marginTop="54dp"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="40dp">


       <TextView
           android:layout_width="200dp"
           android:layout_height="40dp"
           android:textSize="20dp"
           android:gravity="center"
           android:text="Notificaciones"/>

       <Switch

           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:textSize="20dp"
           />

   </LinearLayout>

    <!-- Botones de idioma -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Idioma:"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_english"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Inglés" />

        <Button
            android:id="@+id/button_spanish"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Español" />

        <Button
            android:id="@+id/button_catalan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Catalán" />

    </LinearLayout>

    <!-- Switch para activar/desactivar modo nocturno -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Modo Nocturno"/>

        <Switch
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />

    </LinearLayout>

</LinearLayout>
